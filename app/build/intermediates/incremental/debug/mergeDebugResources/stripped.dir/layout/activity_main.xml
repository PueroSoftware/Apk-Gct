<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1A1A1A"
    tools:context=".MainActivity">

    <!-- SOLUCIÓN: Un solo TextView con un Compound Drawable para optimizar el layout -->

    <!-- Botón de Iniciar Sesión (parte de la cadena) -->

    <TextView
        android:id="@+id/logo_container"
        android:layout_width="278dp"
        android:layout_height="441dp"
        android:drawablePadding="16dp"
        android:gravity="center_horizontal"
        android:text="@string/app_name"
        android:textColor="@android:color/white"
        android:textSize="28sp"
        android:textStyle="bold"
        app:drawableTopCompat="@drawable/ic_logotipo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.552"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="30dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/begin_btn"
        style="@style/Widget.Material3.Button"
        android:layout_width="277dp"
        android:layout_height="70dp"
        android:layout_marginTop="32dp"
        android:padding="16dp"
        android:text="@string/btn_login"
        android:textColor="@android:color/white"
        android:visibility="gone" 
        app:backgroundTint="@color/purple_500"
        app:icon="@android:drawable/ic_lock_idle_lock"
        app:iconGravity="textStart"
        app:iconTint="@android:color/white"
        app:layout_constraintBottom_toTopOf="@+id/register_email_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo_container" />

    <!-- Botón de Registrarse (parte de la cadena) -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/register_email_btn"
        style="@style/Widget.Material3.Button.OutlinedButton"
        android:layout_width="277dp"
        android:layout_height="70dp"
        android:padding="16dp"
        android:text="@string/btn_register"
        android:textColor="@android:color/white"
        android:visibility="gone"
        app:icon="@android:drawable/ic_dialog_email"
        app:iconGravity="textStart"
        app:iconTint="@android:color/white"
        app:strokeColor="@android:color/white"
        tools:layout_editor_absoluteX="206dp"
        tools:layout_editor_absoluteY="544dp" />

</androidx.constraintlayout.widget.ConstraintLayout>

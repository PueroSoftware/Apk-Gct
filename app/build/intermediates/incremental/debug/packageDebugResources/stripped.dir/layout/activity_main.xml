<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1A1A1A"
    tools:context=".MainActivity">

    <!-- Contenedor LinearLayout para centrar el logo y el título como un solo bloque -->
    <LinearLayout
        android:id="@+id/logo_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/logo_image"
            android:layout_width="220dp" 
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_logotipo" />

        <TextView
            android:id="@+id/app_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/app_name"
            android:textColor="@android:color/white"
            android:textSize="28sp"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- Botones posicionados debajo del contenedor del logo -->

    <!-- Botón de Iniciar con Celular (Oculto por defecto) -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/begin_btn"
        style="@style/Widget.Material3.Button.OutlinedButton"
        android:layout_width="277dp"
        android:layout_height="70dp"
        android:layout_marginTop="32dp"
        android:padding="16dp"
        android:text="Iniciar con Celular"
        android:visibility="gone"
        app:icon="@android:drawable/ic_lock_idle_lock"
        app:iconGravity="textStart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo_container" />

    <!-- Botón de Registrarse con Email (Oculto por defecto) -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/register_email_btn"
        style="@style/Widget.Material3.Button.Icon"
        android:layout_width="277dp"
        android:layout_height="70dp"
        android:layout_marginTop="16dp"
        android:padding="16dp"
        android:text="Registrar con Email (Tablet)"
        android:visibility="gone"
        app:icon="@android:drawable/ic_dialog_email"
        app:iconGravity="textStart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/begin_btn" />

</androidx.constraintlayout.widget.ConstraintLayout>
